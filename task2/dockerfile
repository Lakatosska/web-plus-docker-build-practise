FROM node:16-alpine

# создание директории приложения
WORKDIR /home/ilovedocker/app

# Затем опишите инструкцию копирования файла hello.sh в рабочую директорию 
# и задайте скрипт в качестве команды запуска образа (используйте для этого команду sh <имя_файла>).
# При этом переопределить команду запуска для вашего образа, 
# передав другую первым аргументом, должно быть невозможно.
# После прохождения тестов скопируйте Dockerfile в директорию task3.

COPY hello.sh /home/ilovedocker/app

RUN sh hello.sh